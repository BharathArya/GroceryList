<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout1" android:layout_width="match_parent">
        <AutoCompleteTextView android:layout_weight="1" android:layout_height="wrap_content" android:id="@+id/tvNewItem" android:layout_width="match_parent" android:hint="Enter new item here...">
            <requestFocus></requestFocus>
        </AutoCompleteTextView>
        <Button android:id="@+id/btnAddItem" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Add"></Button>
    </LinearLayout>
<ListView android:layout_width="match_parent" android:id="@+id/lvItems" android:layout_height="fill_parent"></ListView>
</LinearLayout>
